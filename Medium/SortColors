// Sort Colours //
int cnt0 = 0, cnt1 = 0, cnt2 = 0;
        for(int i=0; i<nums.size(); i++){
            if(nums[i] == 0) cnt0++;
            else if(nums[i] == 1) cnt1++;
            else if(nums[i] == 2) cnt2++;
        }
        int i = 0;
        for (; cnt0 > 0; cnt0--) nums[i++] = 0;
        for (; cnt1 > 0; cnt1--) nums[i++] = 1;
        for (; cnt2 > 0; cnt2--) nums[i++] = 2;
    }
