// Chocolate Distribution problem //
long long findMinDiff(vector<long long> a, long long n, long long m){
        sort(a.begin(), a.end());
        long long i=0, min_diff = LLONG_MAX;
        while((i+m-1)<n){
            if((a[i+m-1] - a[i]) < min_diff)
                min_diff = a[i+m-1] - a[i];
            i++;
        }
        return min_diff;
    }

